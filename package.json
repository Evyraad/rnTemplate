{
  "name": "template",
  "version": "0.0.2",
  "private": true,
  "scripts": {
    "start": "react-native start",
    "test": "jest",
    "lint": "./node_modules/.bin/eslint",
    "flow": "./node_modules/.bin/flow",
    "reset:cache": "watchman watch-del-all && rm -rf $TMPDIR/react-* && rm -rf $TMPDIR/metro-* && rm -rf $TMPDIR/haste-* && yarn cache clean && jest --clearCache"
  },
  "dependencies": {
    "@react-native-community/async-storage": "1.6.1",
    "lodash": "4.17.15",
    "prop-types": "15.7.2",
    "react": "16.8.6",
    "react-native": "0.62.3",
    "react-native-gesture-handler": "1.3.0",
    "react-native-iphone-x-helper": "1.2.1",
    "react-native-screens": "1.0.0-alpha.23",
    "react-native-sideswipe": "1.5.0",
    "react-native-size-matters": "0.2.1",
    "react-navigation": "3.11.1",
    "react-redux": "7.1.0",
    "redux": "4.0.4",
    "redux-persist": "5.10.0",
    "redux-persist-filesystem-storage": "2.0.0",
    "redux-saga": "1.0.5",
    "reduxsauce": "1.1.0",
    "rn-fetch-blob": "0.10.16",
    "seamless-immutable": "7.1.4"
  },
  "devDependencies": {
    "@babel/cli": "7.5.5",
    "@babel/core": "7.5.5",
    "@babel/preset-flow": "7.0.0",
    "@babel/runtime": "7.5.5",
    "@react-native-community/eslint-config": "0.0.5",
    "babel-eslint": "10.0.2",
    "babel-jest": "24.8.0",
    "babel-plugin-module-resolver": "3.2.0",
    "babel-plugin-transform-react-stateless-component-name": "1.1.2",
    "babel-plugin-transform-remove-console": "6.9.4",
    "eslint": "6.1.0",
    "eslint-config-airbnb": "18.0.0",
    "eslint-import-resolver-babel-module": "5.1.0",
    "eslint-plugin-flowtype": "4.2.0",
    "eslint-plugin-import": "2.18.2",
    "eslint-plugin-jsx-a11y": "6.2.3",
    "eslint-plugin-react": "7.14.3",
    "eslint-plugin-react-native": "3.7.0",
    "eslint-utils": "1.4.1",
    "flow-bin": "0.105.1",
    "husky": "3.0.3",
    "jest": "24.8.0",
    "lint-staged": "9.2.1",
    "metro-react-native-babel-preset": "0.55.0",
    "react-test-renderer": "16.8.6"
  },
  "jest": {
    "preset": "react-native"
  },
  "standard": {
    "parser": "babel-eslint",
    "plugins": [
      "flowtype"
    ],
    "globals": [
      "__DEV__"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint --fix",
      "eslint --ignore-pattern '!.eslintrc.js' --max-warnings=0",
      "flow focus-check",
      "git add"
    ]
  }
}
